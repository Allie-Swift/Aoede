{
  "name": "Aoede",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "public/main.js",
  "description": "A music player",
  "repository": "https://github.com/Allie-Swift/Aoede.git",
  "author": "lhinxue <lhinxue@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "better-sqlite3": "^8.4.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.2",
    "node-gyp": "^9.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "electron-start": "wait-on tcp:3000 && electron .",
    "start": "concurrently -k \"cross-env BROWSER=none yarn react-start\" \"yarn electron-start\"",
    "build": "react-scripts build",
    "build-win": "yarn build && electron-builder -w -c.extraMetadata.main=build/main.js",
    "build-mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/main.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "productName": "Aeode",
    "appId": "com.allie_swift.aeode",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  }
}
